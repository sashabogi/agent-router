{
  "name": "mcp-agent-router",
  "version": "3.0.1",
  "description": "MCP server for multi-agent orchestration - route tasks to specialized AI agents from different LLM providers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agent-router": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "claude",
    "multi-agent",
    "orchestration",
    "llm",
    "anthropic",
    "openai",
    "gemini"
  ],
  "author": "Sasha Bogojevic",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ajv": "^8.17.1",
    "picocolors": "^1.1.1",
    "pino": "^9.6.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.4"
  },
  "files": [
    "dist",
    "config",
    "skills"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sashabogi/agent-router.git"
  }
}
